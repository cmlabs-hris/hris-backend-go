    },
    "components": {
        "schemas": {
            "AuthResponse": {
                "type": "object",
                "properties": {
                    "access_token": {
                        "type": "string"
                    },
                    "access_token_expires_in": {
                        "type": "integer"
                    },
                    "refresh_token": {
                        "type": "string"
                    },
                    "refresh_token_expires_in": {
                        "type": "integer"
                    },
                    "User": {
                        "type": "object",
                        "properties": {
                            "ID": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            },
                            "company_id": {
                                "type": "string"
                            },
                            "company_name": {
                                "type": "string"
                            },
                            "is_admin": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        }
    }
}