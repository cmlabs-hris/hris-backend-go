                        "type": "integer"
                    },
                    "refresh_token": {
                        "type": "string"
                    },
                    "refresh_token_expires_in": {
                        "type": "integer"
                    },
                    "User": {
                        "type": "object",
                        "properties": {
                            "ID": {
